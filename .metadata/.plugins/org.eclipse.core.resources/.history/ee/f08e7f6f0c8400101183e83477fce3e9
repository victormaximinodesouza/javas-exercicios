package atividade_listas;


import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import application.att_01;


public class Employee {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		
		
		List<Employee> list = new ArrayList<>();

		System.out.print("How many employees will be registered? ");
		 int n = sc.nextInt();
		
		
		

		for(int i = 0; i < n; i++) {
			System.out.println("Employee #" + (i + 1) + ":");
			System.out.println("--------------");
			System.out.print("Id: ");
			Integer id = sc.nextInt();
			
			
			System.out.print("Name: ");
			sc.nextLine();
			String name = sc.nextLine();

			System.out.print("Salary: ");
			Double salary = sc.nextDouble();
			
			att_01 emp = new att_01(id, name, salary);
			
			list.add(emp);
			
		}
		
		
		
		int s;  
		
		
		System.out.print("ENter the employee id that will have salary increase: ");
		s = sc.nextInt();
		
		int index = list.indexOf(s); // Procura a posiçao do ID dentro da lista
		
		if( index != -1) {
			System.out.print("Enter the percentage");
			double porcenta = sc.nextDouble();
			double salarioAtual = .get(index);
			double novoSalario = salarioAtual + (salarioAtual + porcenta / 100);
			salary.set(index, novoSalario);
			
		}else {
			System.out.println("This ID does not exist");
		}
		
		System.out.println("List of employess");
		for(int i = 0; i < n; i++) {
			System.out.printf("Id: %d , NAme: %s, Salary: %.3f\n", id.get(i), name.get(i) , salary.get(i) );
		}
		
		
		
		
				
	}
	
	public Integer position(List<Employee> list, int id) { 
		for(int i = 0; i < list.size(); i++) {
			if(list.get(i).getId() == id) {  // ultimo id é o de argumento
				return i;
			}
		}
		
		return null;
		
	}

}
