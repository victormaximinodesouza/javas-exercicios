package atividade_listas;


import java.util.ArrayList;
import java.util.List;
import java.util.Locale;
import java.util.Scanner;

import application.att_01;


public class Employment {

	public static void main(String[] args) {
		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		
		
		List<Employment> list = new ArrayList<>();

		System.out.print("How many employees will be registered? ");
		 int n = sc.nextInt();
		
		
		

		for(int i = 0; i < n; i++) {
			System.out.println("Employee #" + (i + 1) + ":");
			System.out.println("--------------");
			System.out.print("Id: ");
			Integer id = sc.nextInt();
			
			
			System.out.print("Name: ");
			sc.nextLine();
			String name = sc.nextLine();

			System.out.print("Salary: ");
			Double salary = sc.nextDouble();
			
			att_01 emp = new att_01(id, name, salary);
			
			list.add(emp);
			
		}
		
		
		
		int s;  
		
		
		System.out.print("ENter the employee id that will have salary increase: ");
		s = sc.nextInt();
		int idsalary = sc.nextInt();
		int pos = position(list, idsalary);
		if(pos == 0) {
			System.out.println("This id does not exist");
		} else {
			System.out.println("Enter the percentage");
			double percent = sc.nextDouble();
			list.get(pos).
		}
		
		
	
		
		
		
		sc.close();
	}
	
	public static Integer position(List<> list, int id) { 
		for(int i = 0; i < list.size(); i++) {
			if(list.get(i).getId() == id) {  // ultimo id Ã© o de argumento
				return i;
			}
		}
		
		return null;
		
	}

}
